 	in->respawn_retry = in_src->respawn_retry;
@@ -1630,6 +1770,12 @@ instance_init(struct service_instance *in, struct service *s, struct blob_attr *
 	in->exit_code = 0;
 	in->require_jail = false;
 	in->immediately = false;
+	in->policy = SCHED_OTHER;
+	in->priority = 0;
+	in->nice = 0;
