 #ifdef CGROUP_SUPPORT
 	in->cg_sticky = 0;
@@ -1789,6 +1935,31 @@ void instance_dump(struct blob_buf *b, struct service_instance *in, int verbose)
 		blobmsg_close_table(b, r);
 	}
 
+	blobmsg_add_string(b, "policy", policy_name(in->policy));
+
+	switch(in->policy)
